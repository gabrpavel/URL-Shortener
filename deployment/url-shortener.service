[Unit]
Description=URL Shortener
After=network.target

[Service]
User=gabr
WorkingDirectory=/gabr/apps/url-shortener
ExecStart=/gabr/apps/url-shortener/url-shortener
Restart=always
RestartSec=4
StandardOutput=inherit
EnvironmentFile=/gabr/apps/url-shortener/config.env

[Install]
WantedBy=multi-user.target